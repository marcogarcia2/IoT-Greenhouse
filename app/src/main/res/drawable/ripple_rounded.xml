<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000"> <!-- Preto translúcido para o efeito ripple -->

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Fundo do efeito ripple -->
            <corners android:radius="16dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fundo padrão (transparente) -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</ripple>
